{% extends 'base.html.twig' %}

{% block body %}
    <div class="box">
        <div>
            <h1>
                {{ 'title.welcome'|trans }}
            </h1>

            <div>
                <div>
                    {{ form_start(form) }}
                    <h2>{{ 'title.first_connection.user'|trans }}</h2>
                        {{ form_errors(form) }}
                        {{ form_row(form.username, {'label' : 'label.username'} ) }}
                        {{ form_row(form.email, {'label' : 'label.email'} ) }}
                        {{ form_row(form.plainPassword.first, {'label': 'label.password'}) }}
                        {{ form_row(form.plainPassword.second, {'label': 'label.repeat_password'}) }}
                        {{ form_row(form.timezone, {'label': 'label.timezone', 'attr': {'data-controller': 'select--default'}}) }}
                        <div>
                            <button type="submit">{{ 'btn.submit'|trans }}</button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
