{% extends 'layout.html.twig' %}

{% block navbar %}
    <a class="navbar-item" href="{{ path('app_post_add', {slug: board.slug}) }}">{{ 'menu.upload'|trans }}</a>
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_board_index') }}">{{ 'menu.boards'|trans }}</a></li>
    <li><a href="{{ path('app_board_show', {slug: board.slug}) }}">{{ board.name }}</a></li>
    <li class="is-active"><a href="#" aria-current="page">{{ 'menu.add_post'|trans }}</a></li>
{% endblock %}

{% block content %}
    <div class="column"></div>

    <div class="column">
        <div class="box">
            <h1 class="title">{{ 'title.add_post'|trans({board: board.name}) }}</h1>
            {{ include('App/Post/_form.html.twig') }}
        </div>
    </div>

    <div class="column"></div>
{% endblock %}