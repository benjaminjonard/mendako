{% extends 'layout.html.twig' %}

{% block title %}
    {{ 'menu.board'|trans }} · {{ board.name }} · {{ 'menu.edit'|trans }}
{% endblock %}

{% block buttons %}
    <a class="button is-primary" href="{{ path('app_post_add', {slug: board.slug}) }}">{{ 'menu.upload'|trans }}</a>
{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_board_index') }}">{{ 'menu.boards'|trans }}</a></li>
    <li><a href="{{ path('app_board_show', {slug: board.slug}) }}">{{ board.name }}</a></li>
    <li class="is-active"><a href="#" aria-current="page">{{ 'menu.edit'|trans }}</a></li>
{% endblock %}

{% block content %}
    <div class="column"></div>

    <div class="column">
        <div class="box">
            <h1 class="title">{{ 'title.edit_board'|trans({name: board.name}) }}</h1>
            {{ include('App/Board/_form.html.twig') }}
        </div>
    </div>

    <div class="column"></div>
{% endblock %}